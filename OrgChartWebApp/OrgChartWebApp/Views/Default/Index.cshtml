@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>OrgChart</title>
    <script src="https://balkangraph.com/js/orgchart.js"></script>
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>

    <style>
        html, body {
            width: 100%;
            height: 100%;
            padding: 0;
            margin: 0;
            overflow: hidden;
        }

        #tree {
            width: 100%;
            height: 100%;
        }

        .field_0 {
            font-family: Impact;
        }
    </style>
</head>
<body>

    <div id="tree"></div>

    <script>
        OrgChart.STRING_TAGS = true;
        let chart = new OrgChart(document.getElementById("tree"), {
            enableDragDrop: true,
            nodeMenu: {
                edit: { text: "Edit" },
                add: { text: "Add" },
                remove: { text: "Remove" }
            },
            nodeBinding: {
                field_0: "fullName"
            },
            tags: {
                "new": {
                    template: "ula"
                }
            }
        });


        chart.onUpdateNode((args) => {
            let newNode = args.newData;
            $.post("@Url.Action("UpdateNode")", newNode)
                .done(function () {
                    chart.updateNode(newNode);
                });
            return false;
        });


        chart.onAddNode((args) => {
            let node = args.data;
            node.id = 0;
            node.pid = parseInt(node.pid);
            node.fullName = "John Smith";
            node.tags = "new";

            $.post("@Url.Action("AddNode")", node)
                .done(function (response) {
                    node.id = response.id;
                    chart.addNode(node);
                })

            return false;
        });

        chart.onRemoveNode((args) => {
            let nodeId = args.id
            $.post("@Url.Action("RemoveNode")", { id: nodeId })
                .done(function () {
                    chart.removeNode(nodeId);
                })
            return true;
        });

        $.get("@Url.Action("Read")").done(function (response) {
            chart.load(response.nodes);
        });
    </script>
</body>
</html>
